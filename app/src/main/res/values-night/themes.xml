<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Hospital_reservations" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

    </style>

    <style name="agile" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#161032</item>
        <item name="colorPrimaryVariant">#161032</item>
        <item name="colorOnPrimary">#161032</item>
    </style>

    <style name="bitcoinOne" parent="Theme.Design.NoActionBar">
        <item name="colorPrimaryDark">#161032</item>

    </style>

    <!-- Base application theme. -->
    <style name="bitcoinTwo" parent="Theme.Design.NoActionBar">
        <item name="colorPrimaryDark">#bcd5e6</item>
    </style>

    <style name="finalInfo" parent="Theme.Design.NoActionBar">
        <item name="colorPrimaryDark">#fff</item>
    </style>

    <style name="bitcoinThree" parent="Theme.Design.Light.NoActionBar">
        <item name="colorPrimaryDark">#161032</item>
    </style>

    <style name="logout" parent="Theme.Design.Light.NoActionBar">
        <item name="colorPrimaryDark">#ffc53a</item>
    </style>


    <style name="viewParent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="viewParent.headerText">
        <item name="android:textColor">@color/contentTextColor</item>
        <item name="android:textSize">@dimen/headerTextSize</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="viewParent.headerText.NoMode">
        <item name="android:textColor">@color/darkTextColor</item>
    </style>

    <style name="parent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="modifiedEditText" parent="parent">
        <item name="android:textSize">@dimen/newsMoreTextSize</item>
        <item name="android:backgroundTint" tools:ignore="NewApi">@color/primaryTextColor</item>
    </style>

    <style name="loginButton" parent="viewParent">
        <item name="android:background">@drawable/button_background_blue</item>
        <item name="android:textColor">@color/whiteTextColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="spinnerHintText" parent="parent">
        <item name="android:textSize">@dimen/newsMoreTextSize</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:paddingLeft">5dp</item>
    </style>

    <style name="ThemeOverlay.App.CheckBox" parent="">
        <item name="colorOnSurface">@color/colorAccent</item>
        <item name="colorSecondary">@color/colorAccent</item>
    </style>

    <style name="Widget.App.CheckBox" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="buttonTint">@color/colorAccent</item>
    </style>

</resources>